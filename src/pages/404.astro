---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404 - Page Not Found">
  <div class="gap-7 flex flex-col items-center justify-items-center">
    <Image src={error} alt="404" height={250} width={250} class="mt-10" />
    <h1 class="text-5xl text-white">Page Not Found</h1>
    <p class="text-2xl mb-10 text-white">
      Sorry, we couldn't find the page you were looking for.
    </p>
    <a
      href="/"
      class="text-white inline-block primaryBg p-2 mb-6 border rounded primaryBorderColor hover:text-gray-900"
      >Go Back Home</a
    >
  </div>
</MainLayout>
