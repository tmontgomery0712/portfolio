---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "../utils";
import Tags from "../components/Tags.astro";
const { post } = Astro.props;
interface Props {
  post: CollectionEntry<"blog">;
}
---

<div class="max-w-md mx-auto mt-10">
  <div class="text-white footerBg rounded-lg overflow-hidden shadow-lg">
    <a href={"/blogs/" + post.slug}>
      <img
        src={"/images/" + post.data.image}
        alt="Post Image"
        class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
      />
    </a>
    <div class="p-6">
      <h2 class="text-2xl font-semibold mb-2">
        <a href={"/blogs/" + post.slug}> {post.data.title}</a>
      </h2>
      <p class="text-gray-400 text-sm mb-4">{formatDate(post.data.pubDate)}</p>
      <Tags tags={post.data.tags} />
    </div>
  </div>
</div>
