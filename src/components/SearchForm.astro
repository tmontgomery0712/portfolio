<form id="search-form" class="flex items-center" action="/blogs/search">
  <label for="search-input" class="sr-only">Search</label>
  <div class="relative w-full">
    <input
      type="text"
      id="query"
      name="query"
      class="border darkBg primaryBorderColor text-white text-sm rounded-lg block w-full p-2.5"
      placeholder="Search blogs..."
      required
    />
  </div>
  <button
    type="submit"
    class="p-2.5 ms-2 text-sm font-medium text-white primaryBg rounded-lg hover:scale-105"
  >
    <svg
      class="w-4 h-4"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 20 20"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"></path>
    </svg>
    <span class="sr-only">Search</span>
  </button>
</form>
